<script>
    // Generate and append particle CSS dynamically with random left and delay
    (function () {
        const style = document.createElement('style');
        let css = '';
        const particleCount = 8;
        const leftMin = 5, leftMax = 95; // percent
        const delayMin = 0, delayMax = 3; // seconds

        for (let i = 0; i < particleCount; i++) {
            const left = (Math.random() * (leftMax - leftMin) + leftMin).toFixed(1) + '%';
            const delay = (Math.random() * (delayMax - delayMin) + delayMin).toFixed(2) + 's';
            css += `.particle:nth-child(${i + 1}){left:${left};animation-delay:${delay};}\n`;
        }
        style.textContent = css;
        document.head.appendChild(style);

        // Generate particles
        const container = document.querySelector('.particle-container');
        if (container) {
            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                container.appendChild(particle);
            }
        }
    })();
</script>