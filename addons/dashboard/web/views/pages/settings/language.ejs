                                <option value="id" <%= settings.lang === 'id' ? 'selected' : '' %>>üáÆüá© Indonesian</option>
                                <option value="ja" <%= settings.lang === 'ja' ? 'selected' : '' %>>üáØüáµ Japanese</option>
